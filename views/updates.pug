doctype html
html(lang="en")
    head
        title #{title}
        link(rel="stylesheet", href="/css/style.css")
    body
        a(href="/") Return to the homepage
        .form-wrapper
            form(method="POST")
                label(for="name") Contact Email
                input(type="text" name="contactEmail" value=contactEmail required)

                label(for="name") Quest Name
                input(type="text" name="name" value=quest.name required)

                label(for="name") Description
                textarea(name="description" value=quest.description required)

                label(for="reward") Reward ($)
                input(type="number" min="0" name="reward" value=quest.reward required)

                input(type="submit" value="Submit")
